# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Google Cloud Platform
GCP_PROJECT_ID=your-gcp-project-id
GCP_SERVICE_ACCOUNT_KEY_PATH=path/to/your/service-account-key.json
BIGQUERY_DATASET=nfl_analytics

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=nfl_app
POSTGRES_USER=nfl_user
POSTGRES_PASSWORD=your-postgres-password
DATABASE_URL=postgresql://nfl_user:your-postgres-password@localhost:5432/nfl_app

# API Keys
NFL_API_KEY=your-nfl-api-key
ESPN_API_KEY=your-espn-api-key

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# FastAPI Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Streamlit Settings
STREAMLIT_PORT=8501
STREAMLIT_HOST=0.0.0.0

# MLflow Settings
MLFLOW_TRACKING_URI=sqlite:///mlflow.db
MLFLOW_EXPERIMENT_NAME=nfl_analytics

# Prefect Settings (if using)
PREFECT_API_URL=http://localhost:4200/api

# Security
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# External Services
REDIS_URL=redis://localhost:6379/0

# Data Sources
NFL_API_BASE_URL=https://api.nfl.com
ESPN_API_BASE_URL=https://site.api.espn.com/apis/site/v2/sports/football/nfl
